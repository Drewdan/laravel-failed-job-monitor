{
    "name": "spatie/laravel-failed-jobs-monitor",
    "description": "Sends notifications if the queued job fails.",
    "keywords": [
        "spatie",
        "laravel-failed-jobs-monitor"
    ],
    "homepage": "https://github.com/spatie/laravel-failed-jobs-monitor",
    "license": "MIT",
    "authors": [
        {
            "name": "Jolita Grazyte",
            "email": "jolita@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.0",
        "illuminate/support": "~5.0",
        "nesbot/carbon": "~1.0"

    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "orchestra/testbench":"^3.0",
        "maknz/slack": "^1.5"

    },
    "autoload": {
        "psr-4": {
            "Spatie\\FailedJobsMonitor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\FailedJobsMonitor\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "suggest": {
        "maknz/slack": "Allows notifications to be sent via Slack"
    }
}
